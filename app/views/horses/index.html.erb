<p></p>
<div class="heading heading-center divider-with-icon heading-divider">
  <h3 class="section-title">STALLION LIST</h3>
  <div class="divider">
      <i class="fa fa-list-ul"></i>
  </div>
  <div class="d-flex justify-content-center gap-3">
    <%= link_to root_path, method: :get, class: "mb-3" do %>
      <i class="fa-solid fa-house text-dark fs-2"></i>
    <% end %>
    <%= button_to 'Add a new horse', new_horse_path, method: :get, class: "btn btn-flat" %>
  </div>
</div>


<div class="container mb-5 p-3">
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: horses_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Type a keyword"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-flat" %>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <% @horses.each do |horse| %>
      <div class="col-4 mb-5 mt-5">
        <div class="card h-100 mb-20 ">
          <%= cl_image_tag horse.photo.key, class:"img-fluid img-resize"%>
          <div class="info-position">
            <%= link_to '', horse_path(horse), class: "fa-solid fa-magnifying-glass text-decoration-none text-white lupa-position" %>
            <h3><strong><%= horse.name %></strong></h3>
            <p><%= horse.category %></p>
            <p>$ <%= horse.price %> usd</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
