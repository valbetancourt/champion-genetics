<h3>Edit <%= @horse.name %></h3>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for(@horse) do |f| %>
        <%= f.input :accomplishments %>
        <%= f.input :price %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
